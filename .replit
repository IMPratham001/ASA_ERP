modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 38304816
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pg_ctl -D /workspace/data -l /workspace/data/logfile start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd laravel-backend && composer install && php artisan migrate && php artisan serve --host=0.0.0.0 --port=8000 &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run dev"

[[workflows.workflow]]
name = "Database Services"
author = 38304816
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "postgresql -D /workspace/data"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd laravel-backend && php artisan serve --host=0.0.0.0 --port=8000"
